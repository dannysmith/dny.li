{
  "manifest_version": 3,
  "name": "dny.li URL Shortener",
  "version": "1.0.0",
  "description": "Quickly create short URLs with dny.li from any webpage",
  
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "https://dny.li/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "side_panel": {
    "default_path": "side-panel.html"
  },
  
  "action": {
    "default_title": "Open dny.li URL Shortener"
  },
  
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}