{
  "manifest_version": 3,
  "name": "dny.li URL Shortener",
  "version": "1.0.0",
  "description": "Quickly create short URLs with dny.li from any webpage",

  "permissions": ["sidePanel", "storage", "activeTab", "tabs"],

  "host_permissions": ["https://dny.li/*"],

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "side-panel.html"
  },

  "action": {
    "default_title": "Open dny.li URL Shortener"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
